# AutoMERNate Environment Configuration
# Author: Muhammad Bilal Raza Attari
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGO_URI=mongodb://localhost:27017/automernate
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/automernate

# JWT Secret (use a strong random string)
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production

# Pagination
PAGINATION_LIMIT=8

# Razorpay Payment Gateway
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Email Configuration (Gmail SMTP - Recommended)
# Get Gmail App Password from: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_16_char_app_password
EMAIL_FROM=<noreply@automernate.com>

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
